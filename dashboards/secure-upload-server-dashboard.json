{
  "__inputs": [
    {
      "name": "DS_PROMETHEUS",
      "label": "prometheus",
      "description": "",
      "type": "datasource",
      "pluginId": "prometheus",
      "pluginName": "Prometheus"
    },
    {
      "name": "DS_LOKI",
      "label": "loki",
      "description": "",
      "type": "datasource",
      "pluginId": "loki",
      "pluginName": "Loki"
    }
  ],
  "__requires": [
    {
      "type": "grafana",
      "id": "grafana",
      "name": "Grafana",
      "version": "9.0.0"
    },
    {
      "type": "panel",
      "id": "logs",
      "name": "Logs",
      "version": "latest"
    },
    {
      "type": "panel",
      "id": "timeseries",
      "name": "Time series",
      "version": "latest"
    },
    {
      "type": "datasource",
      "id": "prometheus",
      "name": "Prometheus",
      "version": "latest"
    },
    {
      "type": "datasource",
      "id": "loki",
      "name": "Loki",
      "version": "latest"
    }
  ],
  "title": "Secure Upload Server Dashboard",
  "time": {
    "from": "now-6h",
    "to": "now"
  },
  "timezone": "browser",
  "schemaVersion": 37,
  "version": 1,
  "refresh": "30s",
  "panels": [
    {
      "type": "logs",
      "title": "All Logs",
      "datasource": "${DS_LOKI}",
      "targets": [
        {
          "expr": "{app=\"secure-upload-server\"}",
          "refId": "A"
        }
      ],
      "gridPos": { "x": 0, "y": 0, "w": 24, "h": 8 }
    },
    {
      "type": "logs",
      "title": "Upload Logs",
      "datasource": "${DS_LOKI}",
      "targets": [
        {
          "expr": "{app=\"secure-upload-server\"} |= \"upload\"",
          "refId": "B"
        }
      ],
      "gridPos": { "x": 0, "y": 8, "w": 24, "h": 8 }
    },
    {
      "type": "timeseries",
      "title": "CPU Usage",
      "datasource": "${DS_PROMETHEUS}",
      "targets": [
        {
          "expr": "rate(container_cpu_usage_seconds_total{pod=~\"secure-upload-server.*\", container!=\"POD\"}[5m])",
          "refId": "C"
        }
      ],
      "gridPos": { "x": 0, "y": 16, "w": 12, "h": 6 }
    },
    {
      "type": "timeseries",
      "title": "Memory Usage",
      "datasource": "${DS_PROMETHEUS}",
      "targets": [
        {
          "expr": "container_memory_usage_bytes{pod=~\"secure-upload-server.*\", container!=\"POD\"}",
          "refId": "D"
        }
      ],
      "gridPos": { "x": 12, "y": 16, "w": 12, "h": 6 }
    },
    {
      "type": "timeseries",
      "title": "Disk I/O",
      "datasource": "${DS_PROMETHEUS}",
      "targets": [
        {
          "expr": "rate(container_fs_reads_bytes_total{pod=~\"secure-upload-server.*\"}[5m]) + rate(container_fs_writes_bytes_total{pod=~\"secure-upload-server.*\"}[5m])",
          "refId": "E"
        }
      ],
      "gridPos": { "x": 0, "y": 22, "w": 24, "h": 6 }
    },
    {
      "type": "stat",
      "title": "Pod Uptime",
      "datasource": "${DS_PROMETHEUS}",
      "targets": [
        {
          "expr": "time() - kube_pod_start_time{pod=~\"secure-upload-server.*\"}",
          "refId": "F"
        }
      ],
      "gridPos": { "x": 0, "y": 28, "w": 12, "h": 6 }
    },
    {
      "type": "stat",
      "title": "Pod Running",
      "datasource": "${DS_PROMETHEUS}",
      "targets": [
        {
          "expr": "kube_pod_status_phase{pod=~\"secure-upload-server.*\", phase=\"Running\"}",
          "refId": "G"
        }
      ],
      "gridPos": { "x": 12, "y": 28, "w": 12, "h": 6 }
    },
    {
      "type": "timeseries",
      "title": "Log Count (5m)",
      "datasource": "${DS_LOKI}",
      "targets": [
        {
          "expr": "count_over_time({app=\"secure-upload-server\"}[5m])",
          "refId": "H"
        }
      ],
      "gridPos": { "x": 0, "y": 34, "w": 12, "h": 6 }
    },
    {
      "type": "timeseries",
      "title": "Log Rate (1m)",
      "datasource": "${DS_LOKI}",
      "targets": [
        {
          "expr": "rate({app=\"secure-upload-server\"}[1m])",
          "refId": "I"
        }
      ],
      "gridPos": { "x": 12, "y": 34, "w": 12, "h": 6 }
    }
  ]
}